<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"> -->
    <link rel="stylesheet" href="font/bootstrap-icons.min.css">
    <title>@ViewBag.Title</title>
</head>

<body>
    <nav class="navbar navbar-expand bg-dark sticky-top">
        <div class="container">
            <a href="#" class="navbar-brand d-none d-sm-inline">
                <img src="./img/logo.png" style="width:70px" alt="CRUD Application">
            </a>
            <ul class="navbar-nav w-100 d-flex justify-content-center">
                <li class="nav-item rounded me-2">
                    <a class="nav-link fw-medium text-white" href="#">
                        <i class="bi-person-fill mx-1"></i>Persons
                    </a>
                </li>
                <li class="nav-item rounded">
                    <a class="nav-link fw-medium text-white" href="#">
                        <i class="bi-plus mx-1"></i>Create Person
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="d-flex flex-wrap justify-content-between align-items-center py-4 my-3 border-top bg-body-secondary">
        <div class="col-md-4 d-flex align-items-center">
            <span class="mb-3 ms-2 mb-md-0 text-body-secondary">© 2023 Mostafa Mortezapour</span>
        </div>
    </footer>

    @RenderSection("script", false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
</body>

</html>
