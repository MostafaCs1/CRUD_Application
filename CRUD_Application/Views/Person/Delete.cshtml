@model PersonResponse

<div class="container">
<h2 class="h3 text-center p-2 pb-0">Delete person</h2>
<div>
    <a asp-controller="Person" asp-action="Index" class="btn text-danger pt-0 border-0"><i class="bi-arrow-left"></i> Back to persons list</a>
</div>
<hr class="border border-1 border-secondary m-0">
<form asp-controller="Person" asp-action="Delete">
    @* Person ID *@
    <input asp-for="PersonID" class="d-none"/>

    @* Person Name *@
    <div class="row mt-3">
        <label asp-for="PersonName" class="col-sm-2 col-form-label">Person Name</label>
        <div class="col-sm-6">
            <input type="text" asp-for="PersonName" class="form-control" disabled>
        </div>
    </div>

    @* Email *@
    <div class="row mt-3">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="email" asp-for="Email" class="form-control" disabled>
        </div>
    </div>

    @* Address *@
    <div class="row mt-3">
        <label asp-for="Address" class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-6">
            <textarea asp-for="Address" rows="10" class="form-control" disabled></textarea>
        </div>
    </div>
    <div class="mt-3 offset-sm-2">
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>
</div>