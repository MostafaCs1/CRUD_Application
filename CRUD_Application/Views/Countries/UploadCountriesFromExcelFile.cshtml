@{
    ViewBag.Title = "Upload Countries";
}

<div class="container min-vh-100">
    <h2 class="h3 text-center p-2 pb-0">Upload Countries</h2>
    <div>
        <a asp-controller="Persons" asp-action="Index" class="btn text-danger pt-0"><i class="bi-arrow-left"></i> Back to persons list</a>
    </div>
    <hr class="border border-1 border-secondary m-0">
    <form asp-controller="Countries" asp-action="UploadCountriesFromExcelFile" method="post" enctype="multipart/form-data">
        <div class="row mt-5">
            <label for="file-input" class="col-sm-3 col-form-label">Choose a file (.xlsx):</label>
            <div class="col-sm-6">
                <input type="file" id="file-input" name="formFile" class="form-control">
                <div class="text-success fw-lighter">@ViewBag.SuccessMessage</div>
                <div class="text-danger fw-lighter">@ViewBag.ErrorMessage</div>
            </div>
        </div>
        <div class="mt-3 offset-sm-3">
            <button class="btn btn-success" type="submit">Upload</button>
        </div>
    </form>
</div>
